FORM GET_DATA_/SPROLIMS/V_USER.
  PERFORM VIM_FILL_WHERETAB.
*.read data from database.............................................*
  REFRESH TOTAL.
  CLEAR   TOTAL.
  SELECT * FROM /SPROLIMS/T_USER WHERE
(VIM_WHERETAB) .
    CLEAR /SPROLIMS/V_USER .
/SPROLIMS/V_USER-MANDT =
/SPROLIMS/T_USER-MANDT .
/SPROLIMS/V_USER-WERKS =
/SPROLIMS/T_USER-WERKS .
/SPROLIMS/V_USER-MAILBTP =
/SPROLIMS/T_USER-MAILBTP .
/SPROLIMS/V_USER-UNAME =
/SPROLIMS/T_USER-UNAME .
/SPROLIMS/V_USER-APPLICATION =
/SPROLIMS/T_USER-APPLICATION .
<VIM_TOTAL_STRUC> = /SPROLIMS/V_USER.
    APPEND TOTAL.
  ENDSELECT.
  SORT TOTAL BY <VIM_XTOTAL_KEY>.
  <STATUS>-ALR_SORTED = 'R'.
*.check dynamic selectoptions (not in DDIC)...........................*
  IF X_HEADER-SELECTION NE SPACE.
    PERFORM CHECK_DYNAMIC_SELECT_OPTIONS.
  ELSEIF X_HEADER-DELMDTFLAG NE SPACE.
    PERFORM BUILD_MAINKEY_TAB.
  ENDIF.
  REFRESH EXTRACT.
ENDFORM.
*---------------------------------------------------------------------*
FORM DB_UPD_/SPROLIMS/V_USER .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO /SPROLIMS/V_USER.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_/SPROLIMS/V_USER-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM /SPROLIMS/T_USER WHERE
  WERKS = /SPROLIMS/V_USER-WERKS AND
  MAILBTP = /SPROLIMS/V_USER-MAILBTP AND
  UNAME = /SPROLIMS/V_USER-UNAME AND
  APPLICATION = /SPROLIMS/V_USER-APPLICATION .
    IF SY-SUBRC = 0.
    DELETE /SPROLIMS/T_USER .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM /SPROLIMS/T_USER WHERE
  WERKS = /SPROLIMS/V_USER-WERKS AND
  MAILBTP = /SPROLIMS/V_USER-MAILBTP AND
  UNAME = /SPROLIMS/V_USER-UNAME AND
  APPLICATION = /SPROLIMS/V_USER-APPLICATION .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR /SPROLIMS/T_USER.
    ENDIF.
/SPROLIMS/T_USER-MANDT =
/SPROLIMS/V_USER-MANDT .
/SPROLIMS/T_USER-WERKS =
/SPROLIMS/V_USER-WERKS .
/SPROLIMS/T_USER-MAILBTP =
/SPROLIMS/V_USER-MAILBTP .
/SPROLIMS/T_USER-UNAME =
/SPROLIMS/V_USER-UNAME .
/SPROLIMS/T_USER-APPLICATION =
/SPROLIMS/V_USER-APPLICATION .
    IF SY-SUBRC = 0.
    UPDATE /SPROLIMS/T_USER ##WARN_OK.
    ELSE.
    INSERT /SPROLIMS/T_USER .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_/SPROLIMS/V_USER-UPD_FLAG,
STATUS_/SPROLIMS/V_USER-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
